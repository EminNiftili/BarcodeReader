<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarcodeReader.Views.FtpSettings">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Orientation="Vertical">

            <Entry x:Name="address" HorizontalOptions="FillAndExpand" VerticalOptions="Center" HorizontalTextAlignment="Center"/>

            <Entry x:Name="port" HorizontalOptions="FillAndExpand" VerticalOptions="Center"  HorizontalTextAlignment="Center"/>

            <Entry x:Name="username" HorizontalOptions="FillAndExpand" VerticalOptions="Center" HorizontalTextAlignment="Center"/>

            <Entry x:Name="password" HorizontalOptions="FillAndExpand" VerticalOptions="Center" HorizontalTextAlignment="Center"/>

            <Entry x:Name="path" HorizontalOptions="FillAndExpand" VerticalOptions="Center" HorizontalTextAlignment="Center"/>

            <Button x:Name="saveButton" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>